@page
@model HwAspNetCoreBlazor.Pages.Rooms.CustomerDetails

@{
    ViewData["Title"] = "Customer details";
}

<p>Booking room: @Html.DisplayFor(roomModel => Model.Room.Name) on @Html.DisplayFor(reservationModel => Model.TimeSlot)</p>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Reservation.ClientEmail" class="control-label">Email</label>
                <input asp-for="Reservation.ClientEmail" class="form-control" />
                <span asp-validation-for="Reservation.ClientEmail" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.ClientName" class="control-label">Name</label>
                <input asp-for="Reservation.ClientName" class="form-control" />
                <span asp-validation-for="Reservation.ClientName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.ClientSurname" class="control-label">Surname</label>
                <input asp-for="Reservation.ClientSurname" class="form-control" />
                <span asp-validation-for="Reservation.ClientSurname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.ClientPhone" class="control-label">Phone</label>
                <input asp-for="Reservation.ClientPhone" class="form-control" />
                <span asp-validation-for="Reservation.ClientPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.Notes" class="control-label">Notes</label>
                <input asp-for="Reservation.Notes" class="form-control" />
                <span asp-validation-for="Reservation.Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create booking" asp-page-handler="NewReservation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
