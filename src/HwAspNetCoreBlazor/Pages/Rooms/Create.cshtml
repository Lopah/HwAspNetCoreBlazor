@page
@model HwAspNetCoreBlazor.Pages.Rooms.CreateModel

@{ 
    ViewData["Title"] = "Create Room";
}

<h1>Creating Room</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Room.Name" class="control-label"></label>
                <input asp-for="Room.Name" class="form-control" />
                <span asp-validation-for="Room.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Room.Description" class="control-label"></label>
                <input asp-for="Room.Description" class="form-control" />
                <span asp-validation-for="Room.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Room.OpeningTimeFrom" class="control-label"></label>
                <input asp-for="Room.OpeningTimeFrom" class="form-control" />
                <span asp-validation-for="Room.OpeningTimeFrom" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Room.OpeningTimeTo" class="control-label"></label>
                <input asp-for="Room.OpeningTimeTo" class="form-control" />
                <span asp-validation-for="Room.OpeningTimeTo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to Rooms list</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}